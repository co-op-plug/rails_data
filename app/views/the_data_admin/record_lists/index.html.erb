<ul class="ui segment breadcrumb">
  <li class="section"><%= link_to 'back', records_data_lists_path %></li>
  <li class="divider">/</li>
  <li class="section">Table lists</li>
</ul>

<div class="ui top attached borderless menu">
  <div class="item header">Table List</div>
  <div class="right menu">
    <div class="item">
      <%= link_to '新建', new_data_list_record_list_path(@data_list), class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
  <tr>
    <th class="one wide">ID</th>
    <th class="two wide">Parameters</th>
    <th>Columns</th>
    <th>Export</th>
    <th class="three wide"></th>
  </tr>
  </thead>

  <tbody>
  <% @record_lists.each do |record_list| %>
    <tr>
      <td><%= record_list.id %></td>
      <td><%= simple_format_hash(record_list.parameters) %></td>
      <td><%= simple_format_hash(record_list.columns) %></td>
      <td class="ui labels">
        <%= link_to 'pdf', data_list_record_list_path(@data_list, record_list, format: 'pdf'), target: '_blank', class: 'ui label' %>
      </td>
      <td class="ui labels">
        <%= link_to '运行', run_data_list_record_list_path(@data_list, record_list), method: :patch, remote: true, data: { confirm: 'Are you sure?' }, class: 'ui blue label' %>
        <%= link_to '预览', find_data_list_record_lists_path(@data_list.data_table, record_list.parameters), remote: true, class: 'ui blue label' %>
        <%= link_to '修改', columns_data_list_record_list_path(@data_list, record_list), remote: true, class: 'ui blue label' %>
        <%= link_to 'edit', edit_data_list_record_list_path(@data_list, record_list), class: 'ui yellow label' %>
        <%= link_to 'destroy', data_list_record_list_path(@data_list, record_list), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @record_lists %>
<div class="ui segment breadcrumb">
  <%= link_to 'Back', data_list_record_lists_path(@data_list), class: 'section' %>
  <div class="divider"> /</div>
  <div class="active section">New</div>
</div>

<div class="ui segment">
  <%= default_form_with model: @record_list, url: data_list_record_lists_path, locale: true do |f| %>
    <% @data_list.parameters.each do |k, v| %>
      <div class="inline fields">
        <label class="six wide field"><%= k.to_s.titleize %>:</label>
        <div class="six wide field">
          <%= text_field_tag :"record_list[parameters][#{k}]", nil, as: @data_list.parameters[k] %>
        </div>
      </div>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>
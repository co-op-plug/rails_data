<div>

  <div class="ui segment breadcrumb">
    <%= link_to 'Back', data_list_record_lists_path(@data_list), class: 'section' %>
    <div class="divider"> / </div>
    <div class="active section">Edit</div>
  </div>

  <div class="ui segment">
    <%= default_form_for [@data_list, @record_list] do |f| %>
      <% @record_list.parameters.each do |k, v| %>
        <div class="inline fields">
          <label class="six wide field"><%= k.to_s.titleize %>:</label>
          <div class="six wide field">
            <%= text_field_tag :"record_list[parameters][#{k}]", v, type: RecordList::TYPE[@data_list.parameters[k].to_sym][:input] %>
          </div>
        </div>
      <% end %>
      <%= f.submit %>
    <% end %>
  </div>

</div>